highlight-background = #000000
highlight-foreground = #f8f8f8
highlight-comment = #aeaeae
highlight-keyword = #e28964
highlight-method = #99cf50
highlight-name = #65b042
highlight-subst = #daefa3
highlight-tag = #89bdff
highlight-number = #3387cc

highlight-regexp = #e9c062
highlight-variable = #3e87e3
highlight-pseudo = #cda869
highlight-css-class = #9b703f
highlight-rule-keyword = #c5af75
highlight-rule-value = #cf6a4c
highlight-css-id = #8b98ab
highlight-annotation = #9b859d
highlight-pragma = #8996a8
highlight-css-function = #dad085
highlight-hexcolor = #dd7b3b

highlight-group = #CCBBFF
highlight-group2 = #BBCCEE

$code-block
  background: highlight-background
  margin: 0px
  padding: 15px article-padding
  border-style: solid
  border-color: color-border
  border-width: 1px 0
  overflow: auto
  color: highlight-foreground
  line-height: font-size * line-height

$line-numbers
  color: #666
  font-size: 0.85em

.article-entry
  pre, code
    font-size: font-size
    font-family: font-mono
  code
    background: color-background
    text-shadow: 0 1px #fff
    padding: 0 0.3em
  pre
    @extend $code-block
    code
      background: none
      text-shadow: none
      padding: 0
  .highlight
    @extend $code-block
    display: block
    pre
      border: none
      margin: 0
      padding: 0
    table
      margin: 0
      width: auto
    td
      border: none
      padding: 0
    .subject
      clearfix()
      display: block
      font-size: 0.85em
      color: highlight-comment
      line-height: 1em
      margin-bottom: 1em
      a
        float: right
    .gutter pre
      @extend $line-numbers
      text-align: right
      padding-right: 20px
    .line
      height: font-size * line-height
  .gist
    margin: 0 article-padding * -1
    border-style: solid
    border-color: color-border
    border-width: 1px 0
    background: highlight-background
    padding: 15px article-padding 15px 0
    .gist-file
      border: none
      font-family: font-mono
      margin: 0
      .gist-data
        background: none
        border: none
        .line-numbers
          @extend $line-numbers
          background: none
          border: none
          padding: 0 20px 0 0
        .line-data
          padding: 0 !important
      .highlight
        margin: 0ta
        padding: 0
        border: none
      .gist-meta
        background: highlight-background
        color: highlight-comment
        font: 0.85em font-sans
        text-shadow: 0 0
        padding: 0
        margin-top: 1em
        margin-left: article-padding
        a
          color: color-link
          font-weight: normal
          &:hover
            text-decoration: underline



pre
  .comment
    color: highlight-comment

  .keyword,
  .ruby & .function .keyword,
  .request,
  .status,
  .nginx & .title
    color: highlight-keyword


  .function .keyword,
  .sub .keyword,
  .method,
  .list .title
    color: highlight-method

  .string,
  .tag .value,
  .cdata,
  .filter .argument,
  .attr_selector,
  .apache & .cbracket,
  .date,
  .tex & .command,
  .coffeescript & .attribute,
  .name
  .anchor
    color: highlight-name

  .subst,
  .char
    color: highlight-subst

  .regexp,
  .quantifier
    color: highlight-regexp

  .qnumber
    color: lighten(highlight-regexp, 50%)

  .title,
  .sub .identifier,
  .pi,
  .tag,
  .tag .keyword,
  .decorator,
  .shebang,
  .prompt
    color: highlight-tag

  .class .title,
  .type,
  .smalltalk & .class,
  .javadoctag,
  .yardoctag,
  .phpdoc,
  .dartdoc
    text-decoration: underline

  .symbol,
  .ruby & .symbol .string,
  .number
    color: highlight-number


  .params,
  .variable,
  .clojure & .attribute
    color: highlight-variable

  .group
    color: darken(highlight-group, 0%)
  .group1
    color: darken(highlight-group, 10%)
  .group2
    color: darken(highlight-group2, 0%)
  .group3
    color: darken(highlight-group2, 15%)
  .group4
    color: darken(highlight-group2, 25%)

  .css & .tag,
  .rule .property,
  .pseudo,
  .set,
  .tex & .special
    color: highlight-pseudo


  .css & .class
    color: highlight-css-class

  .rule .keyword
    color: highlight-rule-keyword

  .rule .value,
  .preset
    color: highlight-rule-value

  .ref
    color: lighten(highlight-rule-value, 45%)

  .css & .id
    color: highlight-css-id

  .annotation,
  .apache & .sqbracket,
  .nginx & .built_in,
  .options
    color: highlight-annotation

  .preprocessor,
  .pragma,
  .range
    color: highlight-pragma


  .hexcolor,
  .css & .value .number
    color: highlight-hexcolor


  .css & .function
    color: highlight-css-function


  .diff & .header,
  .chunk,
  .tex & .formula
    background-color: #0e2231
    color: #f8f8f8
    font-style: italic

  .diff & .change
    background-color: #4a410d
    color: #f8f8f8


  .addition
    background-color: #253b22
    color: #f8f8f8

  .deletion
    background-color: #420e09
    color: #f8f8f8

  .coffeescript & .javascript,
  .javascript & .xml,
  .tex & .hljs-formula,
  .xml & .javascript,
  .xml & .vbscript,
  .xml & .css,
  .xml & .hljs-cdata
    opacity: 0.5
